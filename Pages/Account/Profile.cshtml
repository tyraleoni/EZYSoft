@page
@model WebApplication1.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "My Account";
}

<div class="container mt-5">
    <div class="row">
  <div class="col-md-8">
    <h1>My Account</h1>
       <hr />

     @if (!string.IsNullOrEmpty(Model.Message))
   {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
   @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     </div>
            }

      <div class="card mb-3">
   <div class="card-header">
      <h5 class="mb-0">Profile Information</h5>
      </div>
     <div class="card-body">
 <div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label fw-bold">First Name</label>
    <p>@Model.CurrentUser.FirstName</p>
         </div>
    <div class="col-md-6">
          <label class="form-label fw-bold">Last Name</label>
     <p>@Model.CurrentUser.LastName</p>
        </div>
  </div>
    <div class="row mb-3">
       <div class="col-md-6">
  <label class="form-label fw-bold">Email Address</label>
        <p>@Model.CurrentUser.Email</p>
     </div>
     <div class="col-md-6">
    <label class="form-label fw-bold">Gender</label>
      <p>@Model.CurrentUser.Gender</p>
 </div>
</div>
    <div class="row mb-3">
     <div class="col-md-6">
        <label class="form-label fw-bold">Date of Birth</label>
          <p>@Model.CurrentUser.DateOfBirth?.ToString("MMM dd, yyyy")</p>
  </div>
 </div>
   </div>
      </div>

    <div class="card mb-3">
        <div class="card-header">
  <h5 class="mb-0">Email Verification</h5>
    </div>
 <div class="card-body">
     @if (Model.IsEmailConfirmed)
    {
   <div class="alert alert-success mb-0">
    <strong>? Email Confirmed</strong> - Your email address has been verified.
</div>
           }
   else
           {
 <div class="alert alert-warning mb-3">
  <strong>? Email Not Confirmed</strong> - Please confirm your email address to fully activate your account.
    </div>
 <form method="post" asp-page-handler="ResendConfirmationEmail">
       <p class="text-muted mb-3">We'll send a confirmation link to <strong>@Model.CurrentUser.Email</strong></p>
     <button type="submit" class="btn btn-primary">Resend Confirmation Email</button>
    </form>
      }
     </div>
 </div>

  <div class="card">
      <div class="card-header">
<h5 class="mb-0">Account Actions</h5>
        </div>
            <div class="card-body">
          <div class="d-grid gap-2">
   <a asp-page="/Account/ChangePassword" class="btn btn-outline-primary">Change Password</a>
   <a asp-page="/Account/Enable2FA" class="btn btn-outline-primary">Enable Two-Factor Authentication</a>
        <a asp-page="/Account/Logout" class="btn btn-outline-danger">Logout</a>
   </div>
 </div>
  </div>
    </div>
    </div>
</div>

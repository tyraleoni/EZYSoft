@page
@model WebApplication1.Pages.Account.Enable2FAModel
@{
}

<div class="container mt-5">
 <h2>Enable Two-Factor Authentication (Authenticator App)</h2>

 <div class="mb-3">
 <p>Scan this QR code into an authenticator app (or enter the key manually), then enter the code from the app to verify and enable2FA.</p>
 @if (Model.QrCodeImage != null)
 {
 <div><img src="@Model.QrCodeImage" alt="QR Code" /></div>
 }
 <p><strong>Manual entry key:</strong> <code>@Model.SharedKey</code></p>
 </div>

 <form method="post">
 <div class="mb-3">
 <label class="form-label">Verification Code</label>
 <input asp-for="Code" class="form-control" />
 <span asp-validation-for="Code" class="text-danger"></span>
 </div>
 <div class="mb-3">
 <button type="submit" class="btn btn-primary">Enable2FA</button>
 </div>
 </form>
</div>